<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<RollingFile name="RollingFileAppender"
					 fileName="/var/log/service.log"
					 filePattern="/var/log/service-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout
					pattern="%d [%-5p] [%10t] -- %-40.40c{1.} : %m %n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<!-- LOG everything at INFO level -->
		<Root level="info">
			<AppenderRef ref="RollingFileAppender" />
		</Root>
		<Logger name="com.success" level="debug" additivity="false">
			<AppenderRef ref="RollingFileAppender" />
		</Logger>
	</Loggers>

</Configuration>
